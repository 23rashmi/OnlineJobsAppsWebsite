@model DatabaseAccessLayer.JobCategoryTable

@{
    ViewBag.Title = "Edit";
}

<div class="section-top-border">
    <div class="row">
        <div class="col-lg-6 col-md-6">
            <h3 class="mb-30">Edit Job Category</h3>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.JobCategoryID)

                <!-- Job Category Field -->
                <div class="mt-4">
                    @Html.EditorFor(model => model.JobCategory, new
                    {
                        htmlAttributes = new
                        {
                            @class = "form-control single-input",
                    @type = "text",
                    @name = "jobCategory",
                    @placeholder = "Enter Job Category",
                    @onfocus = "this.placeholder = ''",
                    @onblur = "this.placeholder = 'Job Category'",
                    @required = true
                        }
               })
                    @Html.ValidationMessageFor(model => model.JobCategory, "", new { @class = "text-danger" })
                </div>

                <!-- Description Field -->
                <div class="mt-4">
                    @Html.EditorFor(model => model.Description, new
                    {
                        htmlAttributes = new
                        {
                            @class = "form-control single-input",
                    @type = "text",
                    @name = "description",
                    @placeholder = "Enter Description",
                    @onfocus = "this.placeholder = ''",
                    @onblur = "this.placeholder = 'Description'",
                    @required = true
                        }
               })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>

                <hr />
                <div class="form-group mt-4">
                    <input type="submit" value="Update" class="genric-btn primary e-large circle" style="float:right;" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default", @style = "float:left; border-radius: 10px;" })
                </div>
            }
        </div>
    </div>
</div>
